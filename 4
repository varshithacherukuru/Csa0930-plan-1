import java.util.Random;

public class Main {
    public static void main(String[] args) {
        // Example of StringBuilder and StringBuffer appending strings
        StringBuilder sb = new StringBuilder();
        sb.append("Hello, ");
        sb.append("World!");
        System.out.println(sb.toString());

        StringBuffer sbf = new StringBuffer();
        sbf.append("Hello, ");
        sbf.append("World!");
        System.out.println(sbf.toString());

        // Performance comparison
        int iterations = 100000;
        Random rand = new Random();
        StringBuilder sb2 = new StringBuilder();
        StringBuffer sbf2 = new StringBuffer();
        long startTime, endTime;

        // StringBuilder
        startTime = System.currentTimeMillis();
        for (int i = 0; i < iterations; i++) {
            sb2.append(rand.nextInt(100));
        }
        endTime = System.currentTimeMillis();
        System.out.println("Time taken by StringBuilder: " + (endTime - startTime) + " milliseconds");

        // StringBuffer
        startTime = System.currentTimeMillis();
        for (int i = 0; i < iterations; i++) {
            sbf2.append(rand.nextInt(100));
        }
        endTime = System.currentTimeMillis();
        System.out.println("Time taken by StringBuffer: " + (endTime - startTime) + " milliseconds");
    }
}
